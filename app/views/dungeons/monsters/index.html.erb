<h1><%= @dungeon.name %></h1>
<h2>Dungeon ID: <%= @dungeon.id %></h2>
<% @monsters.each do |monster| %>
  <h2><%= monster.name %></h2>
  <p><%= "Boss: #{monster.boss}" %></p>
  <p><%= "Health: #{monster.health}" %></p>
  <p><%= link_to "Update Monster", "/monsters/#{monster.id}/edit"%></p><br>
<% end %>

<p><%= link_to "Sort Alphabetically", "/dungeons/#{@dungeon.id}?sort=abc" %></p>
